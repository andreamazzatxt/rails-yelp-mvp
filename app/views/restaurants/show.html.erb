
<div class="card my-2 rounded border-primary">
  <div class="container p-2 ">
    <h2><%= @restaurant.name %></h2>
    <p>Tel: <%= @restaurant.phone_number %></p>
    <p>Address: <%= @restaurant.address %></p>
    <p>Category: <%= @restaurant.category.capitalize %></p>
  </div>

</div>

  <h3>Reviews:</h3>
  <% @reviews.each do |review| %>
  <div class="card my-2 rounded border-info">
    <div class="container p-2">
      <p><%= review.content %></p>
      <% review.rating.times do %>
        <i id="star" class="fas fa-star"></i>
      <% end %>

    </div>

  </div>

  <% end %>
  <h3>Add Review </h3>
  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5 %>
  <%= f.submit %>
<% end %>


